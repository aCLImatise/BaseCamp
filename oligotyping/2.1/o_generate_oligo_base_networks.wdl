version 1.0

task OGenerateOligoBaseNetworks {
  input {
    String? output_dir
    String environment_file
  }
  command <<<
    o-generate-oligo-base-networks \
      ~{environment_file} \
      ~{if defined(output_dir) then ("--output-dir " +  '"' + output_dir + '"') else ""}
  >>>
  parameter_meta {
    output_dir: "Directory path in which \"[sample].png\" files will be stored for each sample."
    environment_file: "Environment file generated by oligotyping analysis"
  }
}