version 1.0

task RunSeqtools.py {
  input {
    Boolean? name_input_file
    Boolean? name_output_file
    Boolean? in_format
    Boolean? out_format
    String? mask_sites
    String? filter_fragments
    String? rename
    String? var_7
    String? var_8
  }
  command <<<
    run_seqtools.py \
      ~{var_7} \
      ~{var_8} \
      ~{true="-infile" false="" name_input_file} \
      ~{true="-outfile" false="" name_output_file} \
      ~{true="-informat" false="" in_format} \
      ~{true="-outformat" false="" out_format} \
      ~{if defined(mask_sites) then ("-masksites " +  '"' + mask_sites + '"') else ""} \
      ~{if defined(filter_fragments) then ("-filterfragments " +  '"' + filter_fragments + '"') else ""} \
      ~{if defined(rename) then ("-rename " +  '"' + rename + '"') else ""}
  >>>
  parameter_meta {
    name_input_file: "[INFILE]      name of the input file (default: standard input)"
    name_output_file: "[OUTFILE]    name of the output file (default: standard output)"
    in_format: "[{COMPACT3,FASTA}] format of the input file (default: FASTA)"
    out_format: "[{COMPACT3,FASTA,PHYLIP}] format of the output file (default: FASTA)"
    mask_sites: "sites with less than N non-gap characters will be masked out"
    filter_fragments: "sequences with less than N non-gap sequences will be removed"
    rename: "Rename sequences, according to the mapping file generated by PASTA"
    var_7: ""
    var_8: ""
  }
}