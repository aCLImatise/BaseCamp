class: CommandLineTool
id: run_seqtools.py.cwl
inputs:
- id: in_file
  doc: '[INFILE]      name of the input file (default: standard input)'
  type: boolean
  inputBinding:
    prefix: -infile
- id: outfile
  doc: '[OUTFILE]    name of the output file (default: standard output)'
  type: boolean
  inputBinding:
    prefix: -outfile
- id: in_format
  doc: '[{COMPACT3,FASTA}] format of the input file (default: FASTA)'
  type: boolean
  inputBinding:
    prefix: -informat
- id: out_format
  doc: '[{COMPACT3,FASTA,PHYLIP}] format of the output file (default: FASTA)'
  type: boolean
  inputBinding:
    prefix: -outformat
- id: mask_sites
  doc: sites with less than N non-gap characters will be masked out
  type: string
  inputBinding:
    prefix: -masksites
- id: filter_fragments
  doc: sequences with less than N non-gap sequences will be removed
  type: string
  inputBinding:
    prefix: -filterfragments
- id: rename
  doc: Rename sequences, according to the mapping file generated by PASTA
  type: string
  inputBinding:
    prefix: -rename
outputs: []
cwlVersion: v1.1
baseCommand:
- run_seqtools.py
