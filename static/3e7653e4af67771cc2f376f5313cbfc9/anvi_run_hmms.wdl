version 1.0

task Anvirunhmms {
  input {
    String? contigs_db
    Int? profile_name_
    Boolean? also_scan_trnas
    Int? hmmer_program
    Boolean? just_do_it
    String? h
    String stop_dot
    String goes_dot
    String hmm_hits
  }
  command <<<
    anvi_run_hmms \
      ~{stop_dot} \
      ~{goes_dot} \
      ~{hmm_hits} \
      ~{if defined(contigs_db) then ("--contigs-db " +  '"' + contigs_db + '"') else ""} \
      ~{if defined(profile_name_) then ("-I " +  '"' + profile_name_ + '"') else ""} \
      ~{if (also_scan_trnas) then "--also-scan-trnas" else ""} \
      ~{if defined(hmmer_program) then ("--hmmer-program " +  '"' + hmmer_program + '"') else ""} \
      ~{if (just_do_it) then "--just-do-it" else ""} \
      ~{if defined(h) then ("-H " +  '"' + h + '"') else ""}
  >>>
  runtime {
    docker: "quay.io/biocontainers/anvio-minimal:7--py_0"
  }
  parameter_meta {
    contigs_db: "Anvi'o contigs database generated by 'anvi-gen-\\ncontigs-database' (default: None)"
    profile_name_: "PROFILE NAME, --installed-hmm-profile HMM PROFILE NAME\\nWhen you run this program without any parameter, it\\nruns all 0 HMM profiles installed on your system. If\\nyou want only a specific one to run, you can select it\\nby using this parameter. These are the currently\\navailable ones: . (default: None)"
    also_scan_trnas: "Also scan tRNAs while you're at it. (default: False)"
    hmmer_program: "Which of the HMMER programs to use to run HMMs\\n(hmmscan or hmmsearch). By default anvi'o will use\\nhmmscan for typical HMM operations like those in anvi-\\nrun-hmms (as these tend to scan a very large number of\\ngenes against a relatively small number of HMMs), but\\nif you are using this program to scan a very large\\nnumber of HMMs, hmmsearch might be a better choice for\\nperformance. For this reason, hmmsearch is the default\\nin operations like anvi-run-pfams and anvi-run-kegg-\\nkofams. See this article for a discussion on the\\nperformance of these two programs:\\nhttps://cryptogenomicon.org/2011/05/27/hmmscan-vs-\\nhmmsearch-speed-the-numerology/ (default: None)"
    just_do_it: "Don't bother me with questions or warnings, just do\\nit. (default: False)"
    h: ""
    stop_dot: "-H HMM PROFILE PATH, --hmm-profile-dir HMM PROFILE PATH\\nYou can use this parameter you can specify a directory\\npath that contain an HMM profile. This way you can run\\nHMM profiles that are not included in anvi'o. See the\\nonline to find out about the specifics of this\\ndirectory structure . (default: None)"
    goes_dot: "-T NUM_THREADS, --num-threads NUM_THREADS\\nMaximum number of threads to use for multithreading\\nwhenever possible. Very conservatively, the default is\\n1. It is a good idea to not exceed the number of CPUs\\n/ cores on your system. Plus, please be careful with\\nthis option if you are running your commands on a SGE\\n--if you are clusterizing your runs, and asking for\\nmultiple threads to use, you may deplete your\\nresources very fast. (default: 1)"
    hmm_hits: "üç∫ More on `anvi-run-hmms`:"
  }
  output {
    File out_stdout = stdout()
  }
}