version 1.0

task Positions2snvInvariantAlignment.pl {
  input {
    Boolean? input_file_snvalignpositionstsv
    Boolean? output_dir
    Boolean? format
    Boolean? keep_all
    Boolean? merge_alignment
    Boolean? reference_file
    Boolean? verbose
  }
  command <<<
    positions2snv_invariant_alignment.pl \
      ~{true="--input" false="" input_file_snvalignpositionstsv} \
      ~{true="--output-dir" false="" output_dir} \
      ~{true="--format" false="" format} \
      ~{true="--keep-all" false="" keep_all} \
      ~{true="--merge-alignment" false="" merge_alignment} \
      ~{true="--reference-file" false="" reference_file} \
      ~{true="--verbose" false="" verbose}
  >>>
  parameter_meta {
    input_file_snvalignpositionstsv: ":  Input file (snv_align-positions.tsv generated by snv pipeline)"
    output_dir: ":  Output directory name (containing an alignment for each chromosome/sequence in reference file)"
    format: ":  Alignment format (default phylip)"
    keep_all: ": Keep all positions in alignment"
    merge_alignment: ":  Merge alignment to single file by concatenating individual chromosomes/sequences in the reference file"
    reference_file: ":  Reference file"
    verbose: ": Print more information"
  }
}