version 1.0

task AnviScriptGetHmmHitsPerGeneCall {
  input {
    String? contigs_db
    String? hmm_source
    File? output_file
  }
  command <<<
    anvi-script-get-hmm-hits-per-gene-call \
      ~{if defined(contigs_db) then ("--contigs-db " +  '"' + contigs_db + '"') else ""} \
      ~{if defined(hmm_source) then ("--hmm-source " +  '"' + hmm_source + '"') else ""} \
      ~{if defined(output_file) then ("--output-file " +  '"' + output_file + '"') else ""}
  >>>
  parameter_meta {
    contigs_db: "Anvi'o contigs database generated by 'anvi-gen- contigs'"
    hmm_source: "NAME Use a specific HMM source. You can use '--list-hmm- sources' flag to see a list of available resources. The default is 'None'."
    output_file: "File path to store results."
  }
}