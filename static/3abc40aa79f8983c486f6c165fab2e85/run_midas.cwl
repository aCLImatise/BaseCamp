class: CommandLineTool
id: run_midas.py_snps.cwl
inputs:
- id: outdir
  doc: Path to directory to store results.  Directory name should correspond to sample
    identifier
  type: string
  inputBinding:
    position: 0
- id: remove_temp
  doc: Remove intermediate files generated by MIDAS (False). Useful to reduce disk
    space of MIDAS output
  type: boolean
  inputBinding:
    prefix: --remove_temp
- id: build_db
  doc: Build bowtie2 database of pangenomes
  type: boolean
  inputBinding:
    prefix: --build_db
- id: align
  doc: Align reads to pangenome database
  type: boolean
  inputBinding:
    prefix: --align
- id: pile_up
  doc: Run samtools mpileup and count 4 alleles across genome
  type: boolean
  inputBinding:
    prefix: --pileup
- id: d
  doc: Path to reference database By default, the MIDAS_DB environmental variable
    is used
  type: string
  inputBinding:
    prefix: -d
- id: species_cov
  doc: Include species with >X coverage (3.0)
  type: double
  inputBinding:
    prefix: --species_cov
- id: species_top_n
  doc: Include top N most abundant species
  type: long
  inputBinding:
    prefix: --species_topn
- id: species_id
  doc: Include specified species. Separate ids with a comma
  type: string
  inputBinding:
    prefix: --species_id
- id: interleaved
  doc: FASTA/FASTQ file in -1 are paired and contain forward AND reverse reads
  type: boolean
  inputBinding:
    prefix: --interleaved
- id: s
  doc: Bowtie2 alignment speed/sensitivity (very-sensitive)
  type: string
  inputBinding:
    prefix: -s
- id: n
  doc: '# reads to use from input file(s) (use all)'
  type: long
  inputBinding:
    prefix: -n
- id: m
  doc: Global/local read alignment (global)
  type: string
  inputBinding:
    prefix: -m
- id: t
  doc: Number of threads to use (1)
  type: string
  inputBinding:
    prefix: -t
- id: map_id
  doc: Discard reads with alignment identity < MAPID (94.0)
  type: double
  inputBinding:
    prefix: --mapid
- id: mapq
  doc: Discard reads with mapping quality < MAPQ (20)
  type: long
  inputBinding:
    prefix: --mapq
- id: base_q
  doc: Discard bases with quality < BASEQ (30)
  type: long
  inputBinding:
    prefix: --baseq
- id: read_q
  doc: Discard reads with mean quality < READQ (20)
  type: long
  inputBinding:
    prefix: --readq
- id: aln_cov
  doc: Discard reads with alignment coverage < ALN_COV (0.75)
  type: double
  inputBinding:
    prefix: --aln_cov
- id: trim
  doc: Trim N base-pairs from 3'/right end of read (0)
  type: long
  inputBinding:
    prefix: --trim
- id: discard
  doc: Discard discordant read-pairs (False)
  type: boolean
  inputBinding:
    prefix: --discard
- id: baq
  doc: 'Enable BAQ: per-base alignment quality (False)'
  type: boolean
  inputBinding:
    prefix: --baq
- id: adjust_mq
  doc: Adjust MAPQ (False)
  type: boolean
  inputBinding:
    prefix: --adjust_mq
outputs: []
cwlVersion: v1.1
baseCommand:
- run_midas.py
- snps
