class: CommandLineTool
id: sparse_mapDB.cwl
inputs:
- id: in_dbname
  doc: Name for the database folder. REQUIRED.
  type: Directory
  inputBinding:
    prefix: --dbname
- id: in_map_db
  doc: Name for the sub-database. REQUIRED.
  type: string
  inputBinding:
    prefix: --mapDB
- id: in_seq_list
  doc: A tab-delimited list of reference to include. It can be generated by "SPARSE.py
    query". REQUIRED.
  type: string
  inputBinding:
    prefix: --seqlist
- id: in_n_thread
  doc: 'Number of threads to use. Default: 20'
  type: long
  inputBinding:
    prefix: --n_thread
- id: in_malt
  doc: Use MALT instead of minimap2 [default]
  type: boolean
  inputBinding:
    prefix: --malt
- id: in_append
  doc: Append to existing database instead of overwrite [default]
  type: boolean
  inputBinding:
    prefix: --append
outputs:
- id: out_stdout
  doc: Standard output stream
  type: stdout
cwlVersion: v1.1
baseCommand:
- sparse
- mapDB
