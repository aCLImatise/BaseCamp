class: CommandLineTool
id: hicstuff_distancelaw.cwl
inputs:
- id: in_average
  doc: "If set, calculate the average of the distance\nlaw of the different chromosomes/arms\
    \ in each\ncondition. If two file given average is\nmandatory."
  type: boolean?
  inputBinding:
    prefix: --average
- id: in_big_arm_only
  doc: "Integer. It given will take only the arms bigger\nthan the value given as\
    \ argument."
  type: long?
  inputBinding:
    prefix: --big-arm-only
- id: in_base
  doc: "Float corresponding of the base of the log to\nmake the logspace which will\
    \ slice the genomes in\nlogbins. These slices will be in basepairs unit.\nDefault\
    \ is 1.1."
  type: double?
  inputBinding:
    prefix: --base
- id: in_centromeres
  doc: "Positions of the centromeres separated by\na space and in the same order than\
    \ the\nchromosomes. Discordant with the circular\noption."
  type: File?
  inputBinding:
    prefix: --centromeres
- id: in_circular
  doc: "Enable if the genome is circular. Discordant\nwith the centromeres option."
  type: boolean?
  inputBinding:
    prefix: --circular
- id: in_dist_tbl
  doc: "[,FILE2,...]    Directory to the file or files containing the\ncompute distance\
    \ law. File should have the same\nformat than the ones made by hicstuff pipeline."
  type: File?
  inputBinding:
    prefix: --dist-tbl
- id: in_frags
  doc: "Tab-separated file with headers, containing\ncolumns id, chrom, start_pos,\
    \ end_pos size.\nThis is the file \"fragments_list.txt\" generated by\nhicstuff\
    \ pipeline. Required if pairs are given."
  type: File?
  inputBinding:
    prefix: --frags
- id: in_inf
  doc: "Inferior born to plot the distance law. By\ndefault the value is 3000 bp (3\
    \ kb). Have to\nbe strictly positive."
  type: long?
  inputBinding:
    prefix: --inf
- id: in_labels
  doc: ",STR2...           List of string of the labels for the plot\nseparated by\
    \ a coma. If no labels given, give\nthe names \"Sample 1\", \"Sample 2\"..."
  type: long?
  inputBinding:
    prefix: --labels
- id: in_output_file_img
  doc: "Output file. Format must be compatible with\nplt.savefig. Default : None."
  type: File?
  inputBinding:
    prefix: --outputfile-img
- id: in_output_file_tabl
  doc: 'Output file. Default : None.'
  type: File?
  inputBinding:
    prefix: --outputfile-tabl
- id: in_pairs
  doc: "Pairs file. Format from 4D Nucleome Omics Data\nStandards Working Group with\
    \ the 8th and 9th\ncoulumns are the ID of the fragments of the\nreads 1 and 2.\
    \ Only add if no distance_law table\ngiven. It will compute the table from these\
    \ pairs\nand the fragments from the fragments file."
  type: File?
  inputBinding:
    prefix: --pairs
- id: in_remove_centromeres
  doc: "Integer. Number of kb that will be remove around\nthe centromere position\
    \ given by in the centromere\nfile. Default is zero."
  type: long?
  inputBinding:
    prefix: --remove-centromeres
- id: in_sup
  doc: "Superior born to plot the distance law. By\ndefault the value is the maximum\
    \ length of all\nthe dataset given. Also if big arm only set, it\nwill be the\
    \ minimum size of the arms/chromosomes\ntaken to make the average.\n"
  type: long?
  inputBinding:
    prefix: --sup
outputs:
- id: out_stdout
  doc: Standard output stream
  type: stdout
- id: out_output_file_img
  doc: "Output file. Format must be compatible with\nplt.savefig. Default : None."
  type: File?
  outputBinding:
    glob: $(inputs.in_output_file_img)
- id: out_output_file_tabl
  doc: 'Output file. Default : None.'
  type: File?
  outputBinding:
    glob: $(inputs.in_output_file_tabl)
hints: []
cwlVersion: v1.1
baseCommand:
- hicstuff
- distancelaw
