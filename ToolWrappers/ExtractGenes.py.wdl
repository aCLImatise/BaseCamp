version 1.0

task ExtractGenespy {
  input {
    Boolean? out_fmt
    File? gff_file
    String example
    String usage
  }
  command <<<
    ExtractGenes_py \
      ~{example} \
      ~{usage} \
      ~{if (out_fmt) then "-outfmt" else ""} \
      ~{if defined(gff_file) then ("--gfffile " +  '"' + gff_file + '"') else ""}
  >>>
  parameter_meta {
    out_fmt: "\\\"6 qseqid sseqid evalue pident score qstart qend"
    gff_file: "GFF file generated by e.g. prodigal only needed if the\\ncontig names are not recoverable from the blast output\\nfile.\\n"
    example: ""
    usage: ""
  }
  output {
    File out_stdout = stdout()
    File out_gff_file = "${in_gff_file}"
  }
}