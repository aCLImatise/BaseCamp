#!/usr/bin/env cwl-runner

baseCommand:
- positions2snv_invariant_alignment.pl
class: CommandLineTool
cwlVersion: v1.0
id: positions2snv_invariant_alignment.pl
inputs:
- doc: ':  Input file (snv_align-positions.tsv generated by snv pipeline)'
  id: input
  inputBinding:
    prefix: --input
  type: boolean
- doc: ':  Output directory name (containing an alignment for each chromosome/sequence
    in reference file)'
  id: output_dir
  inputBinding:
    prefix: --output-dir
  type: boolean
- doc: ':  Alignment format (default phylip)'
  id: format
  inputBinding:
    prefix: --format
  type: boolean
- doc: ': Keep all positions in alignment'
  id: keep_all
  inputBinding:
    prefix: --keep-all
  type: boolean
- doc: ':  Merge alignment to single file by concatenating individual chromosomes/sequences
    in the reference file'
  id: merge_alignment
  inputBinding:
    prefix: --merge-alignment
  type: boolean
- doc: ':  Reference file'
  id: reference_file
  inputBinding:
    prefix: --reference-file
  type: boolean
- doc: ': Print more information'
  id: verbose
  inputBinding:
    prefix: --verbose
  type: boolean
