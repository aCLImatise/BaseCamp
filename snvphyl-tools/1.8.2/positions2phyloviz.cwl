#!/usr/bin/env cwl-runner

baseCommand:
- positions2phyloviz.pl
class: CommandLineTool
cwlVersion: v1.0
id: positions2phyloviz.pl
inputs:
- doc: ':  Input file (snv_align-positions.tsv generated by snv pipeline)'
  id: input
  inputBinding:
    prefix: --input
  type: boolean
- doc: ':  Output file base name'
  id: output_base
  inputBinding:
    prefix: --output-base
  type: boolean
- doc: ': Use passed name instead of default for reference'
  id: reference_name
  inputBinding:
    prefix: --reference-name
  type: boolean
- doc: ': Print more information'
  id: verbose
  inputBinding:
    prefix: --verbose
  type: boolean
